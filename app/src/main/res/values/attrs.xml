<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="new_text_content" format="string" />
    <attr name="new_text_size" format="dimension" />

    <declare-styleable name="my_textview">
        <attr name="textcontent" format="string" />
    </declare-styleable>

    <declare-styleable name="NewTextView">
        <attr name="new_text_content" />
        <attr name="new_text_size" />
    </declare-styleable>

    <declare-styleable name="MyButtonView">
        <attr name="new_text_content" />
        <attr name="new_text_size" />
        <attr name="new_bg_color" format="color|reference" />
    </declare-styleable>
    <declare-styleable name="MyFlowLayout">
        <attr name="myOrientation" format="integer">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
    </declare-styleable>
</resources>